<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textColor="#ff004b6b"
        android:layout_marginTop="30dp"
        android:textSize="40px"
        android:text="@string/toolname" />

    <TextView
        android:id="@+id/toolname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:textColor="#ff640036"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/name" />

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textColor="#ff004b6b"
        android:layout_marginTop="20dp"
        android:textSize="40px"
        android:text="@string/restnum"
        android:layout_below="@+id/name"/>

    <TextView
        android:id="@+id/restnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:textColor="#ff640036"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/num"
        android:layout_below="@+id/name"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textColor="#ff004b6b"
        android:layout_marginTop="20dp"
        android:textSize="40px"
        android:text="@string/totprice"
        android:layout_below="@+id/num"/>

    <TextView
        android:id="@+id/totprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:textColor="#ff640036"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/price"
        android:layout_below="@+id/num"/>

    <TextView
        android:id="@+id/totpriceflag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:textColor="#ff640036"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/totprice"
        android:layout_below="@+id/num"/>

    <TextView
        android:id="@+id/rprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textColor="#ff004b6b"
        android:layout_marginTop="20dp"
        android:textSize="40px"
        android:text="@string/rmb_singprice"
        android:layout_below="@+id/price"/>

    <TextView
        android:id="@+id/rmb_singprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:textColor="#ff640036"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/rprice"
        android:layout_below="@+id/price"/>

    <TextView
        android:id="@+id/rpriceflag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:textColor="#ff640036"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/rmb_singprice"
        android:layout_marginLeft="10dp"
        android:text="RMB"
        android:layout_below="@+id/price"/>


    <TextView
        android:id="@+id/tprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textColor="#ff004b6b"
        android:layout_marginTop="20dp"
        android:textSize="40px"
        android:text="@string/transprice"
        android:layout_below="@+id/rprice"/>

    <TextView
        android:id="@+id/transprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:textColor="#ff640036"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tprice"
        android:layout_below="@+id/rprice"/>

    <TextView
        android:id="@+id/tpriceflag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:textColor="#ff640036"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/transprice"
        android:layout_marginLeft="10dp"
        android:text="RMB"
        android:layout_below="@+id/rprice"/>

    <TextView
        android:id="@+id/exrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textColor="#ff004b6b"
        android:layout_marginTop="30dp"
        android:textSize="40px"
        android:text="@string/buyexcrate"
        android:layout_below="@+id/tprice"/>

    <EditText
        android:id="@+id/exchangerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff640036"
        android:layout_marginTop="20dp"
        android:ems="5"
        android:layout_toRightOf="@+id/exrate"
        android:layout_below="@+id/tprice"
        android:inputType="numberDecimal" />


    <TextView
        android:id="@+id/bnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textColor="#ff004b6b"
        android:layout_marginTop="30dp"
        android:textSize="40px"
        android:text="@string/buynum"
        android:layout_below="@+id/exchangerate"/>

    <EditText
        android:id="@+id/buynum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff640036"
        android:layout_marginTop="20dp"
        android:ems="5"
        android:layout_toRightOf="@+id/bnum"
        android:layout_below="@+id/exchangerate"
        android:inputType="number" />



    <LinearLayout
        android:layout_height="wrap_content"
        android:id="@+id/llybuttom"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/buynum">

        <Button
            android:id="@+id/clearbuttom"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:background="#ffff4c31"
            android:gravity="center"
            android:text="清空"
            android:layout_gravity="bottom"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/flag"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/confimbutton"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:background="#ffff4c31"
            android:gravity="center"
            android:text="新增"
            android:layout_toRightOf="@+id/returnbutton"
            android:layout_alignParentRight="true"
            android:layout_weight="2" />
    </LinearLayout>
</RelativeLayout>
